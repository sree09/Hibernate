<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
 <class name="hibernate.CarBean" table ="car">
     	<id column="vin" name="vin" type="string" />
        <property column="make" name="make" type="string" />
        <property column="model" name="model" type="string" />
        <property column="year" name="year" type="int" />
        <property column="mileage" name="mileage" type="float" />
        <property column="price" name="price" type="float" />
    </class>
</hibernate-mapping>